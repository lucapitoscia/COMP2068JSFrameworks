{{> header}}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Habit Tracker</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

  <div class="container mt-5 text-center">
    <h1 class="display-4 mb-3">Welcome to Habit Tracker</h1>
    <p class="lead mb-4">
      Build strong habits, stay consistent, and visualize your personal growth.
    </p>

    {{#if user}}
      <p class="mb-4">
        Welcome, <strong>{{user.username}}</strong> |
        <a href="/auth/logout" class="btn btn-outline-danger btn-sm">Logout</a>
      </p>
    {{else}}
      <div class="mb-4">
        <a href="/auth/login" class="btn btn-outline-primary btn-sm">Login</a>
        <a href="/auth/register" class="btn btn-outline-success btn-sm">Register</a>
      </div>
    {{/if}}

    <div class="d-grid gap-3 col-6 mx-auto">
      <a href="/habits/public" class="btn btn-outline-primary btn-lg">🌐 View Public Habits</a>
      <a href="/habits" class="btn btn-primary btn-lg">🔒 Go to My Habit Manager</a>
    </div>
  </div>

</body>
</html>

{{> footer}}
